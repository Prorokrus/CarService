@model CommonLayer.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Add new vehicle";
}

<div class="container">
    <div class="col-sm-6">
        @using (Html.BeginForm("Add", "Vehicle", FormMethod.Post, new {@class = "form-horizontal", id = "CreateVehicleForm"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="form-item">
                    <label>Vehicle Brand: </label>
                    @Html.EditorFor(x => x.Brand)
                </div>

                <div class="form-item">
                    <label>Vehicle Color: </label>
                    @Html.EditorFor(x => x.Color)
                </div>
              
                <div class="form-item">
                    <label>Vehicle Motor: </label>
                    @Html.EditorFor(x => x.Motor)
                </div>
                
                <div class="form-item">
                    <label>Vehicle Fuel: </label>
                    @Html.EditorFor(x => x.Fuel)
                </div>
                
                <div class="form-item">
                    <label>Vehicle VinCode: </label>
                    @Html.EditorFor(x => x.VinCode)
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Create</button>
                @Html.ActionLink("Cancel", "Index", "Vehicle", null, new {@class="btn btn-secondary"})
            </div>
        }
    </div>
</div>

<style type="text/css">
    .form-item label {
        font-weight: bold;
    }
</style>